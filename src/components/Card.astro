---
import { Image } from 'astro:assets';

const { title, image, imageAlt, reverse = false } = Astro.props;
---

<div
  class:list={[
    'relative flex flex-col sm:flex-row gap-6 items-center p-6 bg-white rounded-lg shadow-md my-12',
    { 'md:flex-row-reverse': reverse },
  ]}
>
  <div class="w-full sm:w-1/3 flex-shrink-0 not-prose">
    <div class="bg-slate-100 rounded-xl">
      <Image src={image} class="object-cover rounded-xl" alt={imageAlt} />
    </div>
  </div>
  <div class="md:col-span-2 md:pr-6 md:mb-0 mb-6">
    <h2 class="mt-0 mb-2">{title}</h2>
    <p>
      <slot />
    </p>
  </div>
</div>
